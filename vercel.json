{
    "builds": [
        {
            "src": "backend/app/main.py",
            "use": "@vercel/python",
            "config": {
                "maxDuration": 15
            }
        },
        {
            "src": "package.json",
            "use": "@vercel/next"
        }
    ],
    "rewrites": [
        {
            "source": "/api/v1/(.*)",
            "destination": "backend/app/main.py"
        }
    ]
}