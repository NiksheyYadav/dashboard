{
    "builds": [
        {
            "src": "backend/api/index.py",
            "use": "@vercel/python",
            "config": {
                "maxDuration": 30
            }
        },
        {
            "src": "package.json",
            "use": "@vercel/next"
        }
    ],
    "routes": [
        {
            "src": "/api/v1/(.*)",
            "dest": "backend/api/index.py"
        },
        {
            "src": "/health",
            "dest": "backend/api/index.py"
        },
        {
            "src": "/(.*)",
            "dest": "/$1"
        }
    ]
}