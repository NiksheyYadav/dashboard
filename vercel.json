{
    "builds": [
        {
            "src": "backend/api/index.py",
            "use": "@vercel/python",
            "config": {
                "maxDuration": 30
            }
        },
        {
            "src": "package.json",
            "use": "@vercel/next"
        }
    ],
    "rewrites": [
        {
            "source": "/api/v1/:path*",
            "destination": "/backend/api/index.py"
        },
        {
            "source": "/health",
            "destination": "/backend/api/index.py"
        }
    ]
}